{
  "extends": [
    "github>e-lodgy/renovate-config"
  ],
  "rangeStrategy": "bump",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "addLabels": ["automerge"],
    "schedule": ["every weekend"]
  },
  "packageRules": [
    {
      "matchPackageNames": ["php"],
      "matchUpdateTypes": ["minor", "patch"],
      "enabled": false
    }
  ]
}
