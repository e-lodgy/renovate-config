{
  "extends": ["config:base"],
  "major": {
    "addLabels": ["major"],
    "stabilityDays": 5
  },
  "minor": {
    "addLabels": ["minor"]
  },
  "patch": {
    "addLabels": ["patch", "automerge"],
    "automerge": true
  },
  "packageRules": [
    {
      "matchPackagePrefixes": ["elodgy/", "benjaminmal/"],
      "addLabels": ["intern"],
      "stabilityDays": 0,
      "automerge": true
    }
  ],
  "labels": ["bot", "dependencies"],
  "assignees": ["benjaminmal"],
  "assignAutomerge": true,
  "ignoreScripts": true,
  "schedule": [
    "after 7pm every weekday",
    "every weekend",
    "before 9am every weekday"
  ],
  "timezone": "Europe/Paris",
  "separateMinorPatch": true,
  "stabilityDays": 3,
  "prCreation": "not-pending",
  "prConcurrentLimit": 10
}
